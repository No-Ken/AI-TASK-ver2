{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@line-secretary/shared/*": ["packages/shared/src/*"],
      "@line-secretary/database/*": ["packages/database/src/*"],
      "@line-secretary/line-sdk/*": ["packages/line-sdk/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}